<h1>Consensus Mechanisms</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consensus_mechanisms.each do |consensus_mechanism| %>
      <tr>
        <td><%= consensus_mechanism.description %></td>
        <td><%= consensus_mechanism.acronym %></td>
        <td><%= link_to 'Show', consensus_mechanism %></td>
        <td><%= link_to 'Edit', edit_consensus_mechanism_path(consensus_mechanism) %></td>
        <td><%= link_to 'Destroy', consensus_mechanism, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

