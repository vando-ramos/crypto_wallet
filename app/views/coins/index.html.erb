<p id="notice"><%= notice %></p>

<h1>Coins</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, size: '25' %> </td>
        <td><%= link_to t('links.show'), coin, class:"btn btn-outline-dark" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-outline-dark" %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('confirm') }, class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new_coin'), new_coin_path, class:"btn btn-dark" %>

<p><%= link_to t('links.home'), welcome_index_path %></p>
